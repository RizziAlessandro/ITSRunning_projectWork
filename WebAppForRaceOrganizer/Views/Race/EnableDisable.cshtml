@model WebAppForRaceOrganizer.Models.RaceViewModels.EnableDisableRaceViewModel

@{
    ViewData["Title"] = "EnableDisable";
}

<h2>Enable / Disable race</h2>

<h4>EnableDisableRaceViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EnableDisable">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="IsEnabled" /> @Html.DisplayNameFor(model => model.IsEnabled)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
